---
import Layout from "../layouts/Layout.astro";

import Card from "../components/Card.astro";
import Heading from "../components/Heading.astro";
import CustomImageScroll from "../components/CustomImageScroll.astro";
import CTA from "../components/CTA.astro";
import Contact from "../components/Contact.astro";


//Project Components
import Python from "../components/Python.astro";
import EatNgo from "../components/EatNgo.astro";
import InsightPilot from "../components/InsightPilot.astro";
import WeelGo from "../components/WeelGo.astro";
import FilmVault from "../components/FilmVault.astro";
import GithubWSF from "../components/GithubWSF.astro";
---

<Layout title="Web Developer Portfolio">
  <div id="contents">
    <main class="container">
      <div class="mb-16">
        <Heading />
        <p
          class="mt-4 text-lg text-zinc-500 dark:text-zinc-400 font-light lg:text-xl"
        >
          Welcome!, I am a motivated, resourceful, productive and freshly graduated software engineer looking forward to sharpen my skills and gaining more and more
            experience in web development. <a
            href="#contact"
            class="underline text-gray-300">reach out</a
          >.
        </p>
      </div>
      <div class="mb-16">
        <h2
          class="text-3xl mt-6 font-medium lg:text-4xl tracking-tight text-primary dark:text-white"
        >
          Overview
        </h2>
        <p class="mt-4 text-lg text-zinc-500 dark:text-zinc-400">
          I made many and various web apps go ahead and check it <a
            href="https://github.com/MHZ0"
            target="_blank"
            class="underline text-gray-300">All</a
          > !
        </p>
        <CustomImageScroll />
      </div>

      <h2
        class="text-3xl mt-6 font-medium lg:text-4xl tracking-tight text-primary dark:text-white mb-2"
      >
        Professional Work
      </h2>
      <div class="mx-auto grid grid-cols-1 md:grid-cols-3 gap-4">
        <div class="">
          <Card
            title="EatNgo"
            body="A streamlined fast food management system. Customers can browse the menu, select food and drinks, and see detailed descriptions and prices. The app updates the total cost in real-time as items are added, and displays a summary of the order along with table number. techs : Spring Boot, React ."
            tags="EatNgo"
            github="https://github.com/MHZ0/EatNgo"
          >
            <EatNgo />
          </Card>
        </div>
        <div class="">
          <Card
            title="InsightPilot"
            body="A customer feedback management system that helps small businesses collect customer feedbacks, analyze them and use the results to improve their products and services, through various channels which are surveys and polls, and then process the data using advanced analysis tools to extract useful insights by using NLP (AI) for keyword extraction and sentiment analysis and representing it in form of diagrams, curves, charts and more which will be presented in a easy-to-read dashbord. techs: Next.js, React, Tailwind CSS, NLP, Prisma, PlanetScale, Vercel."
            tags="InsightPilot"
            github="https://github.com/MHZ0?tab=repositories"
          >
            <InsightPilot />
          </Card>
        </div>
        <div class="">
          <Card
            title="WeelGo"
            body="A car rental e-commerce website showing withi various car brands and models available for renting with a price depending on the car brand, model, galons per mile and more built with Next js delivering the best performance. techs : Next js, React ."
            tags="WeelGo "
            github="https://github.com/MHZ0/WheelGo"
          >
            <WeelGo />
          </Card>
        </div>
      </div>
        
      <div class="my-8 bg-black">
        <CTA />
      </div>
      <h2
        class="text-3xl mt-6 font-medium lg:text-4xl tracking-tight text-primary dark:text-white mb-2"
      >
        Projects For Fun
      </h2>
      <div class="mx-auto grid grid-cols-1 md:grid-cols-2 gap-4">
        <div class="">
          <Card
            title="FilmVault"
            body="A films library that shows the name, release date, status, cover image, Runtime and discription of every film that is fetched from themoviedb database. techs : Next js, React ."
            tags="FilmVault"
            github="https://github.com/MHZ0/FilmVault"
          >
            <FilmVault />
          </Card>
        </div>
        <div class="">
          <Card
            title="GithubWSF"
            body="A github Profile Clone react app that is based on dispalying the users infos and repos with the ability to insert any github username using a functional searchbar. techs: React, TailwindCSS, Headlessui"
            tags="GithubWSF"
            github="https://github.com/MHZ0/GithubWSF"
          >
            <GithubWSF />
          </Card>
        </div>
      </div>
      <div class="my-8">
        <Contact />
      </div>
    </main>
  </div>
</Layout>

<style is:global>
  main {
    margin: auto;
    padding: 0.75rem;
    width: 1100px;
    max-width: 100%;
    color: white;
    line-height: 1.6;
  }
  .project-image {
    max-width: 100% !important;
    overflow: hidden;
  }
  .project-cards {
  }
  .video-wrapper {
    background: #111111;
    padding: calc(1.5rem - 1px);
    line-height: 1.4;
    border-radius: 8px;
    margin-bottom: 2rem;
  }
  .project-column > div {
    max-width: 100%;
    overflow: hidden;
  }
  .projects-alt > li {
    gap: 1rem !important;
  }
  .astro-a {
    position: absolute;
    top: -32px;
    left: 50%;
    transform: translatex(-50%);
    width: 220px;
    height: auto;
    z-index: -1;
  }

  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
    font-size: 2.75rem;
  }
  .instructions {
    margin-bottom: 2rem;
    border: 1px solid rgba(var(--accent-light), 25%);
    background: linear-gradient(
      rgba(var(--accent-dark), 66%),
      rgba(var(--accent-dark), 33%)
    );
    padding: 1.5rem;
    border-radius: 8px;
  }
  .instructions code {
    font-size: 0.8em;
    font-weight: bold;
    background: rgba(var(--accent-light), 12%);
    color: rgb(var(--accent-light));
    border-radius: 4px;
    padding: 0.3em 0.4em;
  }
  .instructions strong {
    color: rgb(var(--accent-light));
  }
  .link-card-grid {
    display: grid;
    gap: 0;
    padding: 0;
  }
  .read-more {
    color: #fff;
  }
  details {
    position: relative;
    top: -1px;
    margin-top: 0;
    margin-bottom: 1rem;
    padding: 1rem;
    border-radius: 0 0 8px 8px;
    max-width: 900px;
  }
  details > div {
    max-width: 830px;
  }

  summary:hover {
    cursor: pointer;
  }
</style>

<script></script>
